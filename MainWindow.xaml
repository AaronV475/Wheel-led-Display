<Window x:Class="circle_display.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:circle_display"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200" Loaded="Window_Loaded">
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <StackPanel Orientation="Horizontal">
            <GroupBox Header="Colours" Width="180" Height="490" HorizontalAlignment="Right" VerticalAlignment="Top">
                <StackPanel>
                    <Slider x:Name="sldRed" Maximum="255" TickFrequency="1" IsSnapToTickEnabled="True" AutoToolTipPlacement="TopLeft" Margin="0,10,0,0" Value="255"></Slider>
                    <Slider x:Name="sldGreen" Maximum="255" TickFrequency="1" IsSnapToTickEnabled="True" AutoToolTipPlacement="TopLeft" Margin="0,10,0,0" Value="255"></Slider>
                    <Slider x:Name="sldBlue" Maximum="255" TickFrequency="1" IsSnapToTickEnabled="True" AutoToolTipPlacement="TopLeft" Margin="0,10,0,0" Value="255"></Slider>
                </StackPanel>
            </GroupBox>
            <StackPanel>
                <Canvas x:Name="cnvsCircles" Height="600" MouseLeftButtonDown="cnvsCircles_MouseLeftButtonDown" HorizontalAlignment="Left" VerticalAlignment="Top"></Canvas>
                <Grid Name="grdButtons" Height="500" Width="1000" Margin="0,0,0,0" HorizontalAlignment="Left"></Grid>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
